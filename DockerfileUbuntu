# Pull the base image
FROM ubuntu:latest

# Install cgroup-tools to set limits on processes
RUN apt-get update && apt-get install -y \
  cgroup-tools \
  curl \
  sudo \
  iputils-ping \
  && rm -rf /var/lib/apt/lists/*


# Create a User ( not a Group )
ENV USER=foobar
ENV UID=8877
ENV SUDOERS_GRP=wheel
ARG HOME=/home/$USER

# create non-privileged user and group 
RUN useradd \
    --uid "$UID" \
    --comment "$USER" \
    -ms /bin/bash \
    "$USER"

# Add user group to sudo group
RUN adduser "$USER" sudo

# Ensure sudo group users are not asked for a password
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> \
/etc/sudoers

# Run Container as user
USER "$USER"
RUN whoami
WORKDIR "$HOME"tar -xvf alpine.tar.gz